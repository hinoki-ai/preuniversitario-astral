# =============================================================================
# PREUNIVERSITARIO - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env.local for local development
# Copy this file to .env.production for production deployment
# NEVER commit actual .env files to version control
# =============================================================================

# =============================================================================
# REQUIRED ENVIRONMENT VARIABLES
# =============================================================================

# Next.js Environment
NODE_ENV=development

# Convex Backend Configuration
# Get these from your Convex dashboard: https://dashboard.convex.dev
NEXT_PUBLIC_CONVEX_URL=https://your-convex-url.convex.cloud
CONVEX_DEPLOYMENT=dev:your-deployment-name

# Clerk Authentication (Required)
# Get these from your Clerk dashboard: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here
NEXT_PUBLIC_CLERK_FRONTEND_API_URL=https://your-clerk-domain.clerk.accounts.dev

# Clerk Redirect URLs (Configure in Clerk dashboard)
NEXT_PUBLIC_CLERK_SIGN_IN_FORCE_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FORCE_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/dashboard

# =============================================================================
# OPTIONAL ENVIRONMENT VARIABLES
# =============================================================================

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
APP_URL=https://your-production-domain.com

# Clerk Webhook Secret (for user events)
# Configure in Convex dashboard environment variables
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Zoom Integration (Optional)
# Get these from Zoom Marketplace: https://marketplace.zoom.us
NEXT_PUBLIC_ZOOM_MEETING_SDK_KEY=your_zoom_sdk_key
ZOOM_MEETING_SDK_SECRET=your_zoom_sdk_secret
NEXT_PUBLIC_ZOOM_DEMO_MODE=false
NEXT_PUBLIC_ENABLE_ZOOM=false

# Stripe Payment Processing (Optional)
# Get these from Stripe Dashboard: https://dashboard.stripe.com
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Google Services (Optional)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# LSVision Camera Integration (Optional)
LSVISION_UID=your_lsvision_uid

# Error Reporting (Optional)
NEXT_PUBLIC_ERROR_REPORTING_ENDPOINT=https://your-error-endpoint.com
NEXT_PUBLIC_ERROR_REPORTING_API_KEY=your_error_reporting_api_key

# Build Configuration
MOBILE_BUILD=false

# Deployment Profile
# Options: full (all features), simple (safe features only), minimal (basic features)
NEXT_PUBLIC_DEPLOYMENT_PROFILE=full

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
NEXT_PUBLIC_ENABLE_MOCK_EXAMS=true
NEXT_PUBLIC_ENABLE_ZOOM=false
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================

# Development-only variables (do not use in production)
# NEXT_PUBLIC_DEBUG_MODE=true
# NEXT_PUBLIC_LOG_LEVEL=debug
